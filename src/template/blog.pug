extends ./layout/base.pug

block preload
  link(rel='preload' href=require('Images/hero/blog-1098w.webp').default as='image' 
      media='(min-width: 512px) and (-webkit-min-device-pixel-ratio: 2)')
  link(rel='preload' href=require('Images/hero/blog-549w.webp').default as='image' 
      media='(min-width: 512px) and (max-width: 959px) and (-webkit-max-device-pixel-ratio: 1.5),' +
            '(min-width: 1167px) and (-webkit-max-device-pixel-ratio: 1.5)')
  link(rel='preload' href=require('Images/hero/blog-414w.webp').default as='image' 
      media='(min-width: 960px) and (max-width: 1166px) and (-webkit-max-device-pixel-ratio: 1.5)')
  link(rel='preload' href=require('Fonts/poppins-regular.woff2').default as='font' type='font/woff2' crossorigin)

block content
  include ../components/header/header.pug
  main
    section(class='hero-wrap')
      div(class='hero')
        div(class='hero-txt')
          div(class='hero--topic') home/blog
          h1(class='hero--header') Stay updated,</br> Never miss a post.
          p(class='hero--msg') Get to know the latest stuff about our services via our blog post.
        picture
          source(srcset=`${require('Images/hero/blog-414w.webp').default} 414w, 
                        ${require('Images/hero/blog-549w.webp').default} 549w,
                        ${require('Images/hero/blog-1098w.webp').default} 1098w`
                sizes='(min-width: 512px) and (max-width: 959px) 549px,' + 
                      '(min-width: 960px) and (max-width: 1166px) 414px,' +
                      '(min-width: 1167px) 549px'
                type='image/webp')
          source(srcset=`${require('Images/hero/blog-414w.png').default} 414w, 
                        ${require('Images/hero/blog-549w.png').default} 549w,
                        ${require('Images/hero/blog-1098w.png').default} 1098w`
                sizes='(min-width: 512px) and (max-width: 959px) 549px,' + 
                      '(min-width: 960px) and (max-width: 1166px) 414px,' +
                      '(min-width: 1167px) 549px'  
                type='image/png')
          img(class='hero--img' src=require('Images/hero/blog-549w.png').default width='549' height='557' alt='text img' loading='lazy')
    ul(class='box box-previews')
      include ../components/article-preview/article-preview.pug
      - for (let n = 1; n <= 3; n++) 
        - let meta = require(`Articles/${n}/meta.json`)
        +article-preview(meta, n)
  div(class='box box-pagination')
    include ../components/pagination/pagination.pug
  include ../components/footer/footer.pug
  include ../components/logo/svg/spriteLogoIcon.svg
  include ../images/icon/card/spriteCardIcon.svg
  include ../components/modal/modal-auth/modal-auth.pug
  include ../components/modal/modal-trade/modal-trade-coin.pug
  include ../components/modal/modal-trade/modal-trade-card.pug